{
    "name": "textcodepre red ablation",
    "n_gpu": 1,
    
    "model": {
        "type": "TextCodePre",
        "module_name": "textcodepre",
        "args": { 
            "transformer_state_path": "./saved/transformer codetraining red/checkpoint-epoch100.pth",
            "text_summarizer_state_path": "./saved/text_summarizer_pre_red/checkpoint-epoch30.pth",
            "num_classes": 1,
            "text": true,
            "codes": true,
            "demographics_size": 91,
			"div_factor": 4
        }
    },
    "data_loader": {
        "type": "LosReadmissionDataLoader",
        "args": {
            "data_dir": "./data/readmission/balanced",
            "balanced_data": true,
            "vocab_fname": "vocab.pkl",
            "y_label": "readmission",
            "batch_size": 32,
            "shuffle": true,
            "validation_split": 0.10,
            "num_workers": 4
        }
    },
    "do_roc_metrics": true,
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0.000,
            "amsgrad": true
        }
    },
    "loss": "bce_loss",
    "metrics": [
        "accuracy2",
        "sensitivity",
        "specificity",
        "precision",
        "pr_auc",
        "roc_auc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 30,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "ClassificationTrainer",
        "module_name": "classification_trainer",
        "class_weight_0": 1.0,
        "class_weight_1": 1.0,
        "class_weight": [1.15, 7.3],
        "epochs": 100,
        "save_dir": "./saved/",
        "save_period": 2,
        "verbosity": 2000,
        "log_step":2000,
        "monitor": "max accuracy2",
        "early_stop": 100,
        "tensorboardX": false,
        "log_dir": "saved/runs"
    }
}
